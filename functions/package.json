{
  "name": "choosabl-api",
  "version": "0.1.0-alpha",
  "private": true,
  "author": "Brice Colucci <brice.colucci@gmail.com>",
  "homepage": "https://github.com/bcolucci/choosabl/tree/master/api",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "serve": "sudo firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "chokidar 'src/**/*.js' -c 'clear && npm run serve' --initial",
    "deploy": "firebase deploy --only functions --runtime=nodejs8 --trigger-http",
    "logs": "firebase functions:log",
    "format": "prettier-standard '**/*.js'"
  },
  "dependencies": {
    "@google-cloud/vision": "^0.22.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "express-firebase-auth": "^1.3.4",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "node-fetch": "^2.2.0",
    "nodemailer": "^4.6.8",
    "sillyname": "^0.1.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.1",
    "husky": "^1.1.2",
    "prettier-standard": "^8.0.1",
    "rimraf": "^2.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run format"
    }
  }
}
