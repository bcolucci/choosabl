{
  "name": "choosabl-api",
  "version": "0.1.0-alpha",
  "private": true,
  "author": "Brice Colucci <brice.colucci@gmail.com>",
  "homepage": "https://github.com/bcolucci/choosabl/tree/master/api",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "serve": "sudo firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions --runtime=nodejs8 --trigger-http",
    "logs": "firebase functions:log",
    "test": "ava src/*.spec.js",
    "format": "prettier-standard '**/*.js'",
    "build": "rimraf ../functions && babel . --out-dir ../functions --copy-files --ignore node_modules/",
    "package:functions": "npm run build",
    "postpackage:functions": "cd ../functions && npm install --only=production"
  },
  "dependencies": {
    "@google-cloud/vision": "^0.21.0",
    "body-parser": "^1.18.3",
    "casual": "^1.5.19",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-firebase-auth": "^1.3.4",
    "firebase-admin": "5.13.1",
    "firebase-functions": "^2.0.2",
    "sharp": "^0.20.5",
    "sillyname": "^0.1.0",
    "slugify": "^1.3.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.55",
    "@babel/core": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@babel/register": "^7.0.0-beta.55",
    "ava": "^1.0.0-beta.6",
    "firebase-functions-test": "^0.1.3",
    "husky": "^0.14.3",
    "prettier-standard": "^8.0.1",
    "rimraf": "^2.6.2",
    "watch": "^1.0.2"
  },
  "ava": {
    "failFast": true,
    "failWithoutAssertions": false,
    "require": [
      "@babel/register"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run format"
    }
  }
}
